# escape=`

FROM lacledeslan/steamcmd:linux as steamcmd-bms-builder

# Copy cached build files (if any)
COPY ./build-cache/ /app/output

# Install Black Mesa
RUN echo $'\n\nDownloading Black Mesa via SteamCMD' &&`
        /app/steamcmd.sh `
            +login anonymous `
            +force_install_dir /app/output `
            +app_update 346680 validate `
            +quit;

#=======================================================================
FROM i386/debian:stretch-slim

ARG VCS_REF

HEALTHCHECK NONE

# Install dependencies
RUN apt-get update && apt-get install -y `
        libcurl3-gnutls libstdc++6 libncurses5 libz1 &&`
    apt-get clean &&`
    rm -rf /var/lib/apt/lists/*;

LABEL MAINTAINER="Laclede's LAN <contact@lacledeslan.com>" `
      org.label-schema.url="https://github.com/LacledesLAN" `
      org.label-schema.vendor="Laclede's LAN" `
      org.label-schema.vcs-ref=$VCS_REF `
      org.label-schema.name="gamesvr-blackmesa" `
      org.label-schema.description="Black Mesa in Docker" `
      org.label-schema.vcs-url="https://github.com/LacledesLAN/gamesvr-blackmesa"

#Add user "BlackMesa" (to user group "srcds")
RUN groupadd --system srcds &&`
    mkdir --parents /app/.steam/sdk32 &&`
        chgrp srcds /app &&`
    useradd `
        --home /app `
        --gid srcds `
        --system `
        BlackMesa &&`
    chown -R BlackMesa:srcds /app;

USER BlackMesa

RUN ln -s /app/bin/steamclient.so /app/.steam/sdk32/steamclient.so

# Copy in from SteamCMD Builder
COPY --from=steamcmd-bms-builder /app/output /app

WORKDIR /app

ONBUILD USER root
